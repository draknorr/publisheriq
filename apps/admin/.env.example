# Site URL (required for OTP redirects - must be https://, no trailing slash)
NEXT_PUBLIC_SITE_URL=https://publisheriq.app

# Dashboard login password
AUTH_PASSWORD=your-password-here

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=eyJ...
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...

# LLM Provider ("openai" or "anthropic")
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-...

# Cube.js
USE_CUBE_CHAT=true
CUBE_API_URL=https://your-cube-instance.fly.dev
CUBE_API_SECRET=your-cube-api-secret

# Qdrant (vector search)
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key

# Credit system (feature flag)
CREDITS_ENABLED=true
